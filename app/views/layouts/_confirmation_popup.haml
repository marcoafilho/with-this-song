#modal-from-dom{ class: "modal hide fade" }
  .modal-header
    %h3
      = t('popup.delete')
  .modal-body
    %p
      = t('popup.warning')
    %p
      = t('popup.confirmation')
  .modal-footer
    = link_to t('common.yes'), "#", method: :delete, class: "btn btn-danger"
    = link_to t('common.no'), "javascript:$('#modal-from-dom').modal('hide')", class: "btn btn-secondary"