<div class="page-header">
  <h1>
    <%= t('.title') %>
  </h1>
</div>
<table class="table">
  <thead>
    <tr>
      <th width="3%">
        <i class="fa fa-headphones"></i>
      </th>
      <th>
        <i class="fa fa-music"></i>
        <%= t('song.title') %>
      </th>
      <th>
        <i class="fa fa-user"></i>
        <%= t('song.interpreters') %>
      </th>
      <th>
        <i class="fa fa-book"></i>
        <%= t('song.album') %>
      </th>
      <th>
        <i class="fa fa-tags"></i>
        <%= t('song-genres') %>
      </th>
      <th>
        <i class="fa fa-star"></i>
        <%= t('song.rating') %>
      </th>
      <th>
        <i class="fa fa-wrench"></i>
        <%= t('common.actions') %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td>
          <%= link_to song_path(song), class: 'info' do %>
            <i class="fa fa-play"></i>
          <% end %>
        </td>
        <td>
          <%= song.title %>
        </td>
        <td>
          <%= song.format_artists %>
        </td>
        <td>
          <%= song.album %>
        </td>
        <td>
          <%= song.genres.collect(&:name).join("; ") %>
        </td>
        <td>
          <%= rating(song.rating, Song::MAX_RATING) %>
        </td>
        <td>
          <%= link_to t('.edit'), edit_song_path(song), class: 'btn btn-sm' %>
          <%= link_to t('.delete'), song, class: 'btn btn-sm btn-danger confirm-delete' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div><%= will_paginate %></div>
<%= link_to t('.new'), new_song_path, class: 'btn btn-primary' %>

<%= render 'modal_song' %>
