.navbar.navbar-fixed-top
  .navbar-inner
    .container
      = link_to "InPact.me with this song!", root_path, class: "brand"
      %ul.nav
        %li{ class: "#{active_controller?("songs") ? "active" : ""}" }
          %a{ href: songs_url }
            %span.icon-music.icon-white
            =t(".songs")
        %li{ class: "#{active_controller?("genres") ? "active" : ""}" }
          %a{ href: genres_url }
            %span.icon-tags.icon-white
            =t(".genres")
        %li{ class: "#{active_controller?("artists") ? "active" : ""}" }
          %a{ href: artists_url }
            %span.icon-user.icon-white
            =t(".artists")