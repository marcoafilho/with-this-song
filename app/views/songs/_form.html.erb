<%= render 'error_messages', object: form.object %>
<%= form_group form, :title do %>
  <%= form.label :title, "* #{t('song.title')}", class: 'col-xs-2 col-form-label' %>
  <div class="col-xs-10">
    <%= form.text_field :title, class: 'form-control' %>
    <%= error_messages(form, :title) %>
  </div>
<% end %>
<%= form_group form, :interpreter_ids do %>
  <%= form.label :interpreter_ids, t('song.interpreters'), class: 'col-xs-2 col-form-label' %>
  <div class="col-xs-10">
    <%= form.select :interpreter_ids, artist_list(Artist.order(:name).all), { prompt: t('common.select_artist') }, { multiple: true, size: 5, class: 'form-control' } %>
    <%= error_messages(form, :interpreter_ids) %>
  </div>
<% end %>
<%= form_group form, :album do %>
  <%= form.label :album, "* #{t('song.album')}", class: 'col-xs-2 col-form-label' %>
  <div class="col-xs-10">
    <%= form.text_field :album, class: 'input-xlarge' %>
    <%= error_messages(form, :album) %>
  </div>
<% end %>
<%= form_group form, :genre_ids do %>
  <%= form.label :genre_ids, "* #{t('song.genres')}", class: 'col-xs-2 col-form-label' %>
  <div class="col-xs-10">
    <% Genre.order(:name).all.each do |genre| %>
      <label class="checkbox inlne">
        <%= check_box_tag "song[genre_ids][]", genre.id, @song.genres.include?(genre) %>
        <%= genre.name %>
      </label>
      <%= error_messages(form, :genre_ids) %>
    <% end %>
  </div>
<% end %>
<%= form_group form, :rating do %>
  <%= form.label :rating, t('song.rating'), class: 'col-xs-2 col-form-label' %>
  <div class="col-xs-10">
    <%= form.number_field :rating, class: "input-xlarge", in: 1..5 %>
    <%= error_messages(form, :rating) %>
  </div>
<% end %>
