<div class="page-header">
  <h1>
    <%= t('.title') %>
  </h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th class="col-xs-3">
        <i class="fa fa-tags"></i>
        <%= t('genre.name') %>
      </th>
      <th class="col-xs-7">
        <i class="fa fa-align-justify"></i>
        <%= t('genre.description') %>
      </th>
      <th class="col-xs-2">
        <i class="fa fa-wrench"></i>
        <%= t('common.actions') %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td class="col-xs-3">
          <%= genre.name %>
        </td>
        <td class="col-xs-7">
          <%= genre.description %>
        </td>
        <td class="col-xs-2">
          <%= link_to t('.edit'), edit_genre_path(genre), class: 'btn btn-secondary btn-sm' %>
          <%= link_to t('.delete'), genre, class: 'btn btn-sm btn-danger confirm-delete' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div><%= will_paginate %></div>
<%= link_to t('.new'), new_genre_path, class: 'btn btn-primary' %>
