%h3
  = t('.title')
= form_for(@song) do |f|
  = render "shared/error_messages", :object => f.object
  = f.label :title
  = f.text_field :title
  = f.label :interpreter_ids
  = f.select :interpreter_ids, artist_list(Artist.all), {  }, { multiple: true, size: 5 }
  = f.label :album
  = f.text_field :album
  - Genre.all.each do |genre|
    = check_box_tag "song[genre_ids][]", genre.id, @song.genres.include?(genre)
    = genre.name
  = f.submit t('.update'), class: "btn btn-primary"